<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<TextView
		android:id="@+id/homeplayer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Home Player"
		android:layout_marginLeft="5dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		android:textColor="@color/colorPrimaryDark"
		android:fontFamily="@string/universalFont"
		android:textSize="25sp"/>

	<TextView
		android:id="@+id/eventtypeminute"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toRightOf="@id/homeplayer"
		app:layout_constraintRight_toLeftOf="@id/awayplayer"
		android:text="(G) (10)"
		android:textColor="@color/colorPrimaryDark"
		android:fontFamily="@string/universalFont"
		android:textSize="25sp"/>

	<TextView
		android:id="@+id/awayplayer"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginRight="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Away Player"
		android:textColor="@color/colorPrimaryDark"
		android:fontFamily="@string/universalFont"
		android:textSize="25sp"/>

</android.support.constraint.ConstraintLayout>