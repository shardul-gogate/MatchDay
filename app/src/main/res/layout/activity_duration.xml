<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorPrimaryDark"
		tools:context=".Duration">

	<LinearLayout
			android:id="@+id/gridlayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="130dp"
			android:orientation="vertical">

		<LinearLayout
				android:id="@+id/decrlayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

			<Button
					android:id="@+id/decrTen"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@color/colorPrimaryDark"
					android:text="-10"
					android:textSize="50sp"
					android:fontFamily="@string/universalFont"
					android:textColor="@color/colorPrimaryLight"/>

			<Button
					android:id="@+id/decrFive"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@color/colorPrimaryDark"
					android:text="-5"
					android:textSize="50sp"
					android:fontFamily="@string/universalFont"
					android:textColor="@color/colorPrimaryLight"/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/timelayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">

			<TextView
					android:id="@+id/timeDisp"
					android:layout_width="wrap_content"
					android:layout_height="180dp"
					android:text="00"
					android:fontFamily="@string/universalFont"
					android:textSize="145sp"
					android:textColor="@color/colorPrimaryLight"/>

			<TextView
					android:id="@+id/minsText"
					android:layout_width="wrap_content"
					android:layout_height="50dp"
					android:text="minutes"
					android:textColor="@color/colorPrimaryLight"
					android:fontFamily="@string/universalFont"
					android:textSize="35sp"/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/incrlayout"
				android:layout_marginTop="40dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

			<Button
					android:id="@+id/incrFive"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@color/colorPrimaryDark"
					android:text="+5"
					android:textSize="50sp"
					android:fontFamily="@string/universalFont"
					android:textColor="@color/colorPrimaryLight"/>

			<Button
					android:id="@+id/incrTen"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@color/colorPrimaryDark"
					android:text="+10"
					android:textSize="50sp"
					android:fontFamily="@string/universalFont"
					android:textColor="@color/colorPrimaryLight"/>

		</LinearLayout>

	</LinearLayout>

	<Button
			android:id="@+id/settimebtn"
			app:layout_constraintTop_toBottomOf="@id/gridlayout"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_marginTop="40dp"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:background="@drawable/round_button"
			android:backgroundTint="@color/colorPrimaryLight"
			android:textColor="@color/colorPrimaryDark"
			android:text="@string/settime"
			android:textSize="40sp"
			android:fontFamily="@string/universalFont"
			android:textAllCaps="false"/>

</android.support.constraint.ConstraintLayout>